<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.alhudaghifari.ioschool">

    <!-- To auto-complete the email text field in the login form with the user's emails -->
    <uses-permission android:name="android.permission.GET_ACCOUNTS" />
    <uses-permission android:name="android.permission.READ_PROFILE" />
    <uses-permission android:name="android.permission.READ_CONTACTS" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />

    <application
        android:name=".app.AppController"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".Activity.Loading"
            android:configChanges="orientation"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.AppCompat.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".Activity.LoginActivity"
            android:configChanges="orientation"
            android:label="@string/app_name"
            android:screenOrientation="portrait" />
        <activity
            android:name=".Activity.HomePage"
            android:configChanges="orientation"
            android:label="@string/home"
            android:screenOrientation="portrait" />
        <activity
            android:name=".Activity.Profile"
            android:configChanges="orientation"
            android:label="@string/profil"
            android:screenOrientation="portrait" />
        <activity
            android:name=".Activity.SettingPage"
            android:configChanges="orientation"
            android:label="@string/setting"
            android:screenOrientation="portrait" />
        <activity
            android:name=".Activity.Library"
            android:label="@string/title_activity_library"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity android:name=".Activity.DetilArtikel" />
        <activity
            android:name=".Activity.News"
            android:label="@string/title_activity_news"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".Activity.ScheduleReguler"
            android:label="@string/title_activity_schedule"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity android:name=".Activity.Schedule" />
        <activity
            android:name=".Activity.Score"
            android:label="@string/title_activity_score" />
        <activity android:name=".Activity.DetilScoreQuiz" />
        <activity android:name=".Activity.DetilScoreUtsUas" />
        <activity
            android:name=".Activity.Forum"
            android:label="@string/title_activity_forum" />
        <activity android:name=".Activity.DetilForum"></activity>
    </application>

</manifest>