<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.alhudaghifari.ioschool.Activity.DetilForum">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/blue_main_color"
        android:layout_marginTop="@dimen/dp5">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/civ_profpic"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginLeft="@dimen/dp15"
            android:src="@mipmap/ic_launcher"
            />

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/tv_namaanak"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="Ahmad Farhan Ghifari"
                android:gravity="center_vertical"
                android:textColor="@color/white"
                android:layout_marginLeft="@dimen/dp20"
                android:layout_gravity="center_vertical"/>

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="@dimen/dp20">

        <TextView
            android:id="@+id/tv_isiberita"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black_text_1"
            android:text="@string/stackoverflow"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_marginBottom="8dp"
            android:layout_marginTop="@dimen/dp25"
            android:background="@color/silver_icon_clicked"/>

        <ImageView
            android:id="@+id/iv_gambarartikel"
            android:layout_width="@dimen/dp200"
            android:layout_height="@dimen/dp200"
            android:src="@drawable/textview"/>

    </LinearLayout>

</LinearLayout>
