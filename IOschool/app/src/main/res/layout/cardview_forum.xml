<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">


    <android.support.v7.widget.CardView
        android:id="@+id/cardview_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="3dp"
        android:layout_marginRight="3dp"
        android:foreground="?android:attr/selectableItemBackground"
        app:cardBackgroundColor="@color/silver_form"
        app:cardPreventCornerOverlap="true"
        app:cardUseCompatPadding="true"
        app:contentPaddingBottom="8dp"
        app:contentPaddingLeft="15dp"
        app:contentPaddingRight="15dp"
        app:contentPaddingTop="14dp">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:background="@color/blue_main_color">

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/civ_profpic"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:gravity="center_vertical"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="@dimen/dp15"
                    android:src="@mipmap/ic_launcher"
                    />

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent">

                    <TextView
                        android:id="@+id/tv_namaanak"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text="Ahmad Farhan Ghifari"
                        android:gravity="center_vertical"
                        android:textColor="@color/white"
                        android:layout_marginLeft="@dimen/dp20"
                        android:layout_gravity="center_vertical"/>

                </LinearLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <ImageButton
                        android:id="@+id/ib_hapus"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:visibility="invisible"
                        android:scaleType="fitCenter"
                        android:adjustViewBounds="true"
                        android:padding="0dp"
                        android:layout_alignParentRight="true"/>

                </RelativeLayout>

            </LinearLayout>

            <TextView
                android:id="@+id/tv_isiberita"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/loremipsum"
                android:layout_marginTop="@dimen/dp10"
                android:textColor="@color/black_text_2"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:layout_marginBottom="8dp"
                android:layout_marginTop="@dimen/dp25"
                android:background="@color/silver_icon_clicked"/>

        </LinearLayout>

    </android.support.v7.widget.CardView>


</LinearLayout>