<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">


    <android.support.v7.widget.CardView
        android:id="@+id/cardview_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        android:layout_marginTop="1dp"
        android:layout_marginLeft="3dp"
        android:layout_marginRight="3dp"
        android:foreground="?android:attr/selectableItemBackground"
        app:cardBackgroundColor="@color/white"
        app:cardCornerRadius="0dp"
        app:cardPreventCornerOverlap="true"
        app:cardUseCompatPadding="true"
        app:contentPaddingBottom="8dp"
        app:contentPaddingLeft="15dp"
        app:contentPaddingRight="15dp"
        app:contentPaddingTop="14dp">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/txtJudulBuku"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/judul_buku"
                        android:textSize="@dimen/sp20"/>

                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dp25">

                        <ImageView
                            android:id="@+id/imgCircleStatus"
                            android:layout_width="@dimen/dp20"
                            android:layout_height="@dimen/dp20"
                            android:src="@drawable/circle_yellow"/>

                        <TextView
                            android:id="@+id/txtStatusAvailable"
                            android:layout_marginLeft="@dimen/dp15"
                            android:layout_marginTop="@dimen/dp2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/available_in"/>

                    </LinearLayout>

                </LinearLayout>

                <ImageView
                    android:id="@+id/imgForBuku"
                    android:layout_weight="2"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp100"
                    android:src="@mipmap/ic_launcher"
                    android:scaleType="fitCenter"
                    android:adjustViewBounds="true"
                    android:padding="0dp"/>

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="3dp"
                android:layout_marginBottom="8dp"
                android:layout_marginTop="12dp"
                android:background="@color/silver_icon_clicked"/>

        </LinearLayout>

    </android.support.v7.widget.CardView>


</LinearLayout>